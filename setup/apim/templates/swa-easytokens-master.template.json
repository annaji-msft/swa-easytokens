{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API Management"
      }
    },
    "LinkedTemplatesBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains the generated templates"
      }
    },
    "LinkedTemplatesUrlQueryString": {
      "type": "string",
      "metadata": {
        "description": "Query string for the URL of the repository"
      }
    },
    "PolicyXMLBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains the generated policy files"
      }
    },
    "PolicyXMLSasToken": {
      "type": "string",
      "metadata": {
        "description": "The SAS token for the URL of the policy container"
      }
    }
  },
  "resources": [
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/swa-easytokens-globalServicePolicy.template.json', parameters('LinkedTemplatesUrlQueryString'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "PolicyXMLSasToken": {
            "value": "[parameters('PolicyXMLSasToken')]"
          }
        }
      },
      "name": "globalServicePolicyTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": []
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/swa-easytokens-genericproxy-api.template.json', parameters('LinkedTemplatesUrlQueryString'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "PolicyXMLSasToken": {
            "value": "[parameters('PolicyXMLSasToken')]"
          }
        }
      },
      "name": "apisTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'globalServicePolicyTemplate')]"
      ]
    }
  ]
}